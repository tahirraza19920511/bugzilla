<div class="container">  
<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">  
  <%= form_for @bug, url: {action: :update} do |f| %>   
      <div>   
        <h3>Edit a Bug</h3>  
      </div>   
      <div>   
        <p> 
          <%= "<div>#{@bug.errors.full_messages.first}</div>".html_safe if @bug.errors.any? %>   
        <div>
            <%= f.label :title %>    
              <%= f.text_field :title, class: 'form-control' %>   
        </div>   
  
        <div>   
             <%= f.label :deadline %>   
             <%= f.date_field :deadline, class: 'form-control' %>   
        </div>   
  
        <div>   
        	  <%= f.label :screenshot %> 
              <%= f.file_field :screenshot, class: 'form-control' %>  
              <%= image_tag @bug.screenshot.to_s, :size => "30x30" %>   
        </div> 
        <div>   
            <%= f.label :type %> 
              <%= f.text_field :types, class: 'form-control' %>   
        </div> 
        <div>   
            <%= f.label :status %> 
              <%= f.text_field :status, class: 'form-control' %>   
        </div>  

        <div>   
            <%= f.label :project %> 
              <%= f.collection_select(:project_id,Project.all,:id, :title,{}, {class: 'form-control'}) %>   
        </div>

         </p>   
      </div>   
      <div>   
        <%= link_to 'Back', { controller: 'bugs', action: 'index'} %>   
        <%= f.submit 'Update Bug' %>   
      </div>   
  <% end %>   
</div>  
  <div class="col-sm-4"></div>
</div>
</div>

