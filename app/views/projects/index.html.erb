<div class="container">  
	<h1 class="text-center">All Projects</h1>
<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6  text-center margin-right"> 
  <div> 
  	<% if (current_user.user_type == 'Qa') %>
  
<%= link_to 'add Bug', new_bug_path, class: "btn btn-info" %>
<% end %>
<% if (current_user.user_type == 'Manager') %>
<%= link_to 'add Project', new_project_path, class: "btn btn-info" %>
<% end %>
</div>
<table border=2px>

	<thead>
		<tr>
	<th>Title</th>
	<th>Description</th>
	<% if (current_user.user_type == 'Developer') || (current_user.user_type == 'Manager') %>
	<th>Show</th>
	<% end %>
	<% if current_user.user_type == 'Manager' %>
	<th>Edit</th>
	<th>Delete</th>
	<% end %>
</tr>
	</thead>
	<tbody>
		
		<% @projects.each do |project| %>
		<tr>
		<td><%= project.title %></td>
		<td><%= project.description %></td>
		<% if (current_user.user_type == 'Developer') || (current_user.user_type == 'Manager') %>
		<td><%= link_to 'show', project_path(project), class: "btn btn-primary" %></td>
		<% end %>
		<% if current_user.user_type == 'Manager' %>
		<td><%= link_to 'edit', edit_project_path(project), class: "btn btn-success" %></td>
		<td><%= link_to 'delete', project_path(project), method: :delete, class: "btn btn-danger" %></td>
		<% end %>
	</tr>
	<% end %>
	</tbody>
</table>
</div>
<div class="col-sm-3"></div>
</div>
</div>

